{% extends "template-default.njk" %}

{% block content %}
  <main role="main">
    <section>
      <p><b>{{ package.description }}</b></p>
    </section>

    <section>
      <div class="slider">
      	<ul role="region" aria-label="Gallery" tabindex="0">
          <li id="1"><figure><img src="slide-1.jpeg" alt="Slide 1"><figcaption>925x520 (16:9 Ratio)</figcaption></figure></li>
          <li id="2"><figure><img src="slide-2.jpeg" alt="Slide 2"><figcaption>400x400 (Square)</figcaption></figure></li>
          <li id="3"><figure><img src="slide-3.jpeg" alt="Slide 3"><figcaption>700x200 (Horizontal)</figcaption></figure></li>
          <li id="4"><figure><img src="slide-4.jpeg" alt="Slide 4"><figcaption>400x600 (Vertical)</figcaption></figure></li>
      	</ul>
      </div>
      <h2>Abstract</h2>
      <ul>
        <li>Content slider</li>
        <li>Scroll, swipe, and keyboard navigation</li>
        <li>Native slide animations (where available)</li>
        <li>URL hash navigation</li>
      	<li>Custom aspect ratio via CSS</li>
      </ul>
    </section>
    <section>
      <h2>Installation</h2>
      <p>CDN Development (redirect to latest):</p>
      <pre><code>&lt;link rel="stylesheet" href="https://unpkg.com/{{ package.name }}@latest/dist/{{ package.keyword }}.min.css"/&gt;</code></pre>
      <p>CDN Production (specific release):</p>
      <pre><code>&lt;link rel="stylesheet" href="https://unpkg.com/{{ package.name }}@{{ package.version }}/dist/{{ package.keyword }}.min.css"/&gt;</code></pre>
      <p>NPM package:</p>
      <pre><code>$ npm install --save-dev {{ package.name }}</code></pre>
      <p>CSS import:</p>
      <pre><code>@import url(&quot;https://unpkg.com/{{ package.name }}@{{ package.version }}/dist/{{ package.keyword }}.min.css&quot;);</code></pre>
    </section>
  </main>

  <script type="text/javascript" src="./js/test.js"></script>

{% endblock %}
